<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="337dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="15dp"
        android:paddingLeft="25dp"
        android:paddingBottom="15dp"
        android:paddingRight="25dp">

        <TextView
            android:id="@+id/txtFeedbackTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feedback Title: "
        />

        <TextView
            android:id="@+id/txtClassId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Id: "
        />

        <TextView
            android:id="@+id/txtClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class name: "
        />

        <TextView
            android:id="@+id/txtModuleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Module Id: "
        />

        <TextView
            android:id="@+id/txtModuleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Module Name: "
        />

        <TextView
            android:id="@+id/txtEndTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Time: "
        />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: "
        />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_do_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="308dp"
        android:backgroundTint="#3AFA44"
        android:contentDescription="add_assignment"
        android:outlineAmbientShadowColor="#3770FF"
        android:outlineSpotShadowColor="#3770FF"
        android:src="@android:drawable/ic_menu_edit"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:rippleColor="#3770FF" />

</androidx.constraintlayout.widget.ConstraintLayout>